{
  "name": "residencias-app",
  "version": "1.0.0",
  "description": "Sistema de Gestión para Residencia - Aplicación de Escritorio",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run server:standalone\"",
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "server:standalone": "node server/standalone.js",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "rebuild:deps": "electron-rebuild -f -w sqlite3",
    "preview": "vite preview",
    "server": "node server/index.js"
  },
  "keywords": [
    "residencia",
    "gestion",
    "electron",
    "react"
  ],
  "author": "Programador Jefe",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.residencias.app",
    "productName": "Sistema de Gestión - Residencia",
    "npmRebuild": false,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sqlite3/**/*"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "perMachine": true
    }
  }
}